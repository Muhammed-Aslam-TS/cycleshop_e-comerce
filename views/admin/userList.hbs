
<main class="main" id="main">
  <section>
    <div class="container ">
      <div class="card-body">
        <h3 class="text-center">Product Detils</h3>
        <div class="row-2 col-md-2">
          <a href="/admin/addProduct" class="btn btn-success btn-sm">Add Products</a>
        </div>
        <table class="table table-borderless datatable">

          <thead>
            <tr>
              <th scope="col">No</th>
              <th scope="col">Name</th>
              <th scope="col">Email</th>
              <th scope="col">Phone</th>
              <th scope="col">Status</th>

            </tr>
          </thead>
          <tbody>
        <tr>
          {{#each user}}
        <tr>
          <th scope="row">{{incremented @ index}}</th>
          <td>{{this.Name}}</td>
          <td>{{this.Email}}</td>
          <td>{{this.Phone}}</td>
          <td> {{this.userBlocked}}</td>
          <td>
            {{#if this.userBlocked}}
            <a href="/admin/unBlock?id={{this._id}}" class="btn btn-success">Un Block</a>

            {{!-- <input type="checkbox" checked data-toggle="toggle" data-onstyle="outline-success"
              data-offstyle="outline-danger"> --}}

            {{else}}
            <a href="/admin/block?id={{this._id}}" class="btn btn-danger">Block</a>
            {{/if}}
          </td>

        </tr>
        {{/each}}
      </tbody>
        </table>
      </div>
    </div>
  </section>
</main>









