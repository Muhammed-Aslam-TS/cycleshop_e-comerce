<main class="main" id="main">
  <section>

    <div class="row g-3">
      <div class="col-lg-6">

        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Add Category</h5>

            <!-- General Form Elements -->
            <form action="/admin/addCategory" method="post" enctype="multipart/form-data">
              <div class="row mb-3">
                <label for="inputText" class="form-label">Category Name</label>
                <div class="col-sm-10">
                  <input type="text" name="CategoryName" class="form-control" id="CategoryName"
                    onkeyup="validatecategory()">
                  <span id="Name-error" class="text text-danger"></span>
                </div>
              </div>

              <div class="row mb-3">
                <label for="inputNumber" class="form-label">File Upload</label>
                <div class="col-sm-10">
                  <input class="form-control" name="Images" type="file" id="formFile" required>
                </div>
              </div>

              <div class="row mb-3">

                <div class="col-sm-10">
                  <button type="submit" class="btn btn-primary" onclick="validateform()">Submit</button>
                </div>
              </div>

            </form><!-- End General Form Elements -->

          </div>
        </div>

      </div>


    </div>

  </section>
</main>


<script>
  var nameError = document.getElementById('Name-error')

  function validatecategory() {

    let name = document.getElementById('CategoryName').value
    if (name.length == "" || name.length == 0) {
      nameError.innerHTML = 'Name is required';
      return false
    }
    else {
      nameError.innerHTML = ''
      return true
    }
  }


</script>


<script>
  function validateform() {

    if (validatecategory()) {
      return true
    } else {
      validatecategory()
      return false
    }
  }
</script>