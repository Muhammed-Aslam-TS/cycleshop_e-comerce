<main class="main" id="main">
  <section>


    <div class="container ">


      <div class="card-body">
        <h1 class="text-center">Product Detils</h1>
        <div class="row-2 col-md-2">
          <a href="/admin/addCategory" class="btn btn-success btn-sm">Add Catogory</a>
        </div>
        <table class="table table-borderless datatable">

          <thead>
            <tr>
              <th scope="col">No</th>
              <th scope="col">Category Name</th>
              <th scope="col">Category img</th>
           

            </tr>
          </thead>
          <tbody>
            {{#each getcatogery}}
            <tr>
              <th scope="row">{{incremented @index}}</th>
              <td>{{this.CategoryName}}</td>

              <td><img src="/categoryImages/{{this.img}}" alt="" srcset="" width="50px" width="50px"></td>
              <td>
               
                <a href="/admin/deleteCatogory/{{this._id}}" class="btn btn-success"
                  onclick="return confirm('Are you want to delete {{this.CategoryName}}?')">Delete</a>
                {{!-- <a href="/admin/catogoryEdit/{{this._id}}" class="btn btn-danger">Edit</a> --}}
              </td>
            </tr>
            {{/each}}


          </tbody>
        </table>

      </div>

    </div>
  </section>
</main>