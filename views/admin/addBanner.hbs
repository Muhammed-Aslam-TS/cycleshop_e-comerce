<main class="main" id="main">
    <section>

        <div class="row g-3">
            
            <div class="col-lg-6">

                <div class="card">
                    <div class="card-body">
                        <h3 class="text-center"><b>Add Banner</b></h3>

                        <!-- General Form Elements -->
                        <form action="/admin/addBanner" method="post" enctype="multipart/form-data" >
                            <div class="row mb-3">
                                <label for="inputText" class="form-label">Bnner Name</label>
                                <div class="col-sm-10">
                                    <input type="text" name="bannerName" class="form-control" id="contact-banner" onkeyup="validateBanner()">
                                </div>
                                <span class="text-danger" id="banner-error"></span>
                            </div>
                            
                            <div class="row mb-3">
                                <label for="inputNumber" class="form-label">File Upload</label>
                                <div class="col-sm-10">
                                    <input class="form-control" name="Images" type="file" id="formFile"
                                        multiple="multiple" required>
                                </div>
                            </div>

                            <div class="row mb-3">

                                <div class="col-sm-10">
                                    <button onclick="validateform()" class="btn btn-primary" type="submit">Submit Form </button>

                                </div>
                            </div>

                        </form><!-- End General Form Elements -->

                    </div>
                </div>

            </div>


        </div>

    </section>
</main>
<script>

    var bannerError = document.getElementById('banner-error')


    function validateBanner() {
        let banner = document.getElementById('contact-banner').value
        if (banner.length == "" || banner.length == 0) {
            bannerError.innerHTML = 'banner name is required';
            return false
        }
        else {
            bannerError.innerHTML = ''
            return true
        }
    }

</script>
<script>
    function validateform() {
        if (validateBanner() ) {
            return true
        } else {
            validateBanner()
            return false
        }
    }
</script>