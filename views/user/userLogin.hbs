

    <section class="vh-100">
     
  <div class="container py-5 h-100">
    <div class="row d-flex align-items-center justify-content-center h-100">
      <div class="col-md-8 col-lg-7 col-xl-6">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
          class="img-fluid" alt="Phone image">
      </div>
      <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">

         {{#if loginErr}}
      <p class="error text-danger">Invalid username or password </p>
      
      {{/if}}
      
        <form action="/login" method="post" id="submit-formm">

          <!-- Email input -->
          <div class="form-outline mb-4"> 
            <label class="form-label" for="form1Example13">Email address</label>
            <input type="email" id="contact-email" onkeyup="validateEmail()" name="Email" class="form-control form-control-lg" />
            <span id="email-error"></span>
           
          </div>

          <!-- Password input -->
          <div class="form-outline mb-4">
             <label class="form-label" for="form1Example23">Password</label>
            <input type="password" id="contact-password" onkeyup="validatePassword()" name="Password" class="form-control form-control-lg" />
          <span id="password-error"></span>
          </div>

          <div class="d-flex justify-content-around align-items-center mb-4">
            <!-- Checkbox -->
            <div class="form-check">
              <label class="form-check-label"  for="form1Example3"> Remember me </label>
              <input class="form-check-input" type="checkbox" value=""  checked />
              
            </div>
            <a href="#!">Forgot password?</a>
          </div>

          <!-- Submit button -->
          
            <button type="submit" class="btn btn-primary ">Sign in</button>
         <div>
           <div class="register text-end"><a  href="/register" style="color: blue;" class="">Creat New Accoun? </a></div>
           <div class="otp text-end"> <a   href="/otpLogin" style="color: blue;" >OTP Login? </a></div>
         </div>
        </form>
      </div>
    </div>
  </div>
</section>



   